{
  "name": "fe-ng-base-mf",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start:dev": "ng serve --c=development --port 4215 --live-reload false",
    "start:cert": "ng serve --c=certification --port 4215 --live-reload false",
    "start:prod": "ng serve --c=production --port 4215 --live-reload false",
    "build:dev": "ng build --c=development",
    "build:cert": "ng build --c=certification",
    "build:prod": "ng build --c=production",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:openhandles": "jest --detectOpenHandles",
    "test:watch": "jest --watchAll",
    "build:single-spa:fe-ng-base-mf": "ng build fe-ng-base-mf --prod",
    "serve:single-spa:fe-ng-base-mf": "ng s --project fe-ng-base-mf --disable-host-check --port 4215 --live-reload false",
    "compodoc": "npx compodoc -p tsconfig.doc.json",
    "docs:json": "compodoc -p ./tsconfig.json -e json -d .",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src/ --quiet --fix",
    "format": "npx prettier src/ --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "@angular/animations": "^15.2.9",
    "@angular/cdk": "^12.2.13",
    "@angular/common": "^15.2.9",
    "@angular/compiler": "^15.2.9",
    "@angular/core": "^15.2.9",
    "@angular/forms": "^15.2.9",
    "@angular/platform-browser": "^15.2.9",
    "@angular/platform-browser-dynamic": "^15.2.9",
    "@angular/router": "^15.2.9",
    "@azure/msal-angular": "^2.0.6",
    "@azure/msal-browser": "^2.20.0",
    "ngx-skeleton-loader": "^5.0.0",
    "rxjs": "~6.6.0",
    "single-spa": ">=4.0.0",
    "single-spa-angular": "^5.0.2",
    "systemjs-webpack-interop": "^2.3.7",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "12.1.3",
    "@angular-devkit/build-angular": "^15.2.9",
    "@angular-eslint/eslint-plugin": "^13.0.1",
    "@angular-eslint/eslint-plugin-template": "^13.0.1",
    "@angular/cli": "^15.2.9",
    "@angular/compiler-cli": "^15.2.9",
    "@babel/core": "^7.17.2",
    "@compodoc/compodoc": "^1.1.16",
    "@types/jest": "^27.0.3",
    "@types/node": "^12.20.45",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "babel-loader": "^8.2.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.8.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-preset-angular": "^11.0.1",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "string-replace-webpack-plugin": "^0.1.3",
    "typescript": "^4.8.4",
    "webpack-merge": "^5.8.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/src/single-spa/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/single-spa/"
    ],
    "globals": {
      "__webpack_public_path__": true,
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  },
  "lint-staged": {
    "src/**/*.ts": "eslint  --cache --fix"
  }
}
